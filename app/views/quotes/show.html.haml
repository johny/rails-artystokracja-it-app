= render @quote

- content_for :og do
  %meta{property: "og:title", content: "ArystokracjaIT to"}
  %meta{property: "og:description", content: truncate(strip_tags(@quote.content), length: 150)}
  %meta{property: "og:url", content: quote_url(@quote)}
  %meta{property: "og:site_name", content: "ArystokracjaIT.pl"}
  %meta{property: "og:type", content: "article"}
